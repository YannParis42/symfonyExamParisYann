{% extends 'base-front.html.twig' %}

{% block title %}Ajout d'un produit'{% endblock %}

{% block body %}

{% if app.user %}
<div class="container">
    <h1>Ajouter un produit</h1>
{{ form_start(form) }}
{{ form_row(form.name) }}
{{ form_row(form.imagePath) }}

<button type="submit" class="btn btn-success mt-2">Soumettre</button>
{{ form_end(form) }}
</div>

{% endif %}

{% endblock %}